@page "{orderId:int}"
@model JumboJuice.Pages.OrderConfirmationModel

<div class="container mt-5">
    <div class="text-center">
        <h2 class="mb-4">Order Confirmation</h2>

        @if (Model.Order != null)
        {
            <!-- Thank You Section -->
            <div class="alert alert-success py-4">
                <i class="bi bi-check-circle-fill" style="font-size: 2rem; color: green;"></i>
                <p class="mt-3">Thank you for your order! Your order has been successfully placed.</p>
            </div>

            <!-- Order Information -->
            <div class="order-info my-4">
                <p class="lead"><strong>Order Number:</strong> #@Model.Order.OrderId</p>
                <p class="lead"><strong>Order Date:</strong> @Model.Order.OrderDate.ToString("g")</p>
            </div>

            <!-- Order Summary Section -->
            <h3 class="mt-5">Order Summary</h3>
            <table class="table table-bordered mt-3">
                <thead class="table-light">
                    <tr>
                        <th>Item</th>
                        <th class="text-center">Quantity</th>
                        <th class="text-right">Price</th>
                        <th class="text-right">Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Order.OrderItems)
                    {
                        <tr>
                            <td>@item.Item.Name</td>
                            <td class="text-center">@item.Quantity</td>
                            <td class="text-right">@item.Price.ToString("C")</td>
                            <td class="text-right">@((item.Quantity * item.Price).ToString("C"))</td>
                        </tr>
                    }
                </tbody>
            </table>

            <!-- Total Amount -->
            <div class="d-flex justify-content-end mt-4">
                <p class="h4"><strong>Total Amount:</strong> @Model.Order.TotalAmount.ToString("C")</p>
            </div>

            <!-- Back to Shopping Button -->
            <div class="text-center mt-4">
                <a href="/Shop" class="btn btn-success btn-lg">Back to Shop</a>
            </div>
        }
    </div>
</div>

