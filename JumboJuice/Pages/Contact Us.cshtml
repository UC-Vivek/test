@page
@model ContactUsModel
@{
    ViewData["Title"] = "Contact Us";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Jumbo Juice</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
            color: #333;
        }

        .container {
            max-width: 1000px;
            margin: 40px auto;
            background-color: #ffffff;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            border-radius: 15px;
            overflow: hidden;
        }

        .header {
            background-color: #4CAF50;
            color: darkblue;
            padding: 30px 0;
            text-align: center;
        }

        .contact-info, .contact-form, .map-section, .social-media {
            padding: 30px;
        }

            .contact-info i, .social-media i {
                color: #4CAF50;
                margin-right: 10px;
            }

            .social-media a {
                color: #333;
                text-decoration: none;
                margin: 0 15px;
                font-size: 1.2em;
            }

                .social-media a:hover {
                    color: #4CAF50;
                }

        .map-container {
            height: 300px;
            background-color: #e9ecef;
            display: flex;
            justify-content: center;
            align-items: center;
            border-radius: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Contact Jumbo Juice</h1>
            <p>We'd love to hear from you!</p>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="contact-info">
                    <h2>Get in Touch</h2>
                    <p><i class="fas fa-map-marker-alt"></i> 123 Main Street, Cincinnati, OH 12345</p>
                    <p><i class="fas fa-phone"></i> (555) 555-5555</p>
                    <p><i class="fas fa-envelope"></i> info@jumbojuice.com</p>
                    <p><i class="fas fa-clock"></i> Mon-Fri: 9am-6pm, Sat-Sun: 10am-4pm</p>
                </div>

                <div class="social-media">
                    <h3>Follow Us</h3>
                    <a href="https://www.facebook.com/your-fake-facebook-page"><i class="fab fa-facebook-square"></i></a>
                    <a href="https://www.instagram.com/your-fake-instagram-account"><i class="fab fa-instagram"></i></a>
                    <a href="https://twitter.com/your-fake-twitter-handle"><i class="fab fa-twitter-square"></i></a>
                </div>
            </div>

            <div class="col-md-6">
                <div class="contact-form">
                    <h2>Share your Experience</h2>
                    <form>
                        <div class="mb-3">
                            <label for="name" class="form-label">Name</label>
                            <input type="text" class="form-control" id="name" required>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" required>
                        </div>
                        <div class="mb-3">
                            <label for="message" class="form-label">Message</label>
                            <textarea class="form-control" id="message" rows="4" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-success">Send Message</button>
                    </form>
                </div>
            </div>
        </div>
        <br />
        <div class="map-section">
            <h2>Find Us</h2>
            <div class="map-container">
                <img src="~/images/hg.png" alt="Map placeholder" style="max-width: 100%; height: auto;">
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
</body>
</html>