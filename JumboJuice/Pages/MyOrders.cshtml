@page
@model JumboJuice.Pages.MyOrdersModel
<h2>My Orders</h2>

@if (Model.Orders.Count == 0)
{
    <div class="alert alert-info">You have no orders.</div>
}
else
{
    <div class="table-responsive mt-4">
        <table class="table table-striped table-hover">
            <thead class="table-light">
                <tr>
                    <th>Order Number</th>
                    <th>Order Date</th>
                    <th>Total Amount</th>
                    <th></th> <!-- For View Details Button -->
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model.Orders)
                {
                    <tr>
                        <td>@order.OrderId</td>
                        <td>@order.OrderDate.ToString("g")</td>
                        <td>@order.TotalAmount.ToString("C")</td>
                        <td>
                            <a href="/OrderDetails/@order.OrderId" class="btn btn-primary btn-sm">View Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
